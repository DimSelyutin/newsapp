<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <context-param> 
    <description>Location to store uploaded file</description> 
    <param-name>file-upload</param-name> 
    <param-value>E:\Tomcat\apache-tomcat-10.0.27\webapps\data</param-value> 
  </context-param>








  <servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>by.htp.ex.controller.MainController</servlet-class>
    <multipart-config>
        <!-- enter your values -->
        <max-file-size>90000000</max-file-size> 
        <max-request-size>123456789</max-request-size>
        <file-size-threshold>90000000</file-size-threshold>
    </multipart-config>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/controller</url-pattern>
	</servlet-mapping>

  <error-page>
    <error-code>404</error-code>
    <location>/404.html</location>
  </error-page>
</web-app>
